{% extends "layout.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <div id="commenttab" class="table-responsive">
            <table class="table table-hover" id="myTable">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Nom Vern</th>
                    <th>Habitat</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tbody>
                {% for taxref in listTaxrefs %}
                  <tr>
                      <td>{{ taxref.lbnom }}</td>
                   <td>{{ taxref.nonvern }}</td>

                   <td>{{ taxref.habitat.description }}</td>

                    <td> {% if taxref.frStatut != null %}{{ taxref.frStatut.description }}{% endif %}</td>
                  </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
</div>
{% endblock %}
