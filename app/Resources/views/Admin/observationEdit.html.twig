{% extends "layout.html.twig" %}
{% block content %}
<div class="container">
    <div class="row">
        <h1>Modification d'une observation</h1>
        {# Conteneur Google map #}
        <div id="map"></div>
        <div id="map-text"><p>Cliquez sur la carte pour obtenir les coordonées du lieu de l'observation</p></div>

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}


            {# Champ date d'observation #}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.dateObservation, "Date d'observation", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.dateObservation) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.dateObservation, {'attr':{'placeholder':'Sélectionner une date'}}) }}
                </div>
            </div>


            {# Champ espece #}



            {# Champ commentaires #}
            <div class="form-group">
                {{ form_label(form.comment, "Commentaires", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.comment) }}
                <div class="col-sm-10">
                    {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            {# Champ longitude #}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.longitude, "Longitude", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.longitude) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.longitude, {'attr': {'class': 'form-control longitude'}}) }}
                </div>
            </div>


            {# Champ latitude #}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.latitude, "Latitude", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.latitude) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.latitude, {'attr': {'class': 'form-control latitude'}}) }}
                </div>
            </div>

            {# Champ Taxref #}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.taxref, "Choisissez un espèce", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.taxref) }}

                <div class="col-sm-10">
                    {# Génération de l'input. #}
                    {{ form_widget(form.taxref, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            {{ form_rest(form) }}


            <div class="form-group">
                <input type="submit" value="Valider" class="btn btn-default pull-right"/>
            </div>

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}

